{
        "apiVersion":"build.openshift.io/v1",
        "kind":"BuildConfig",
        "metadata":{
                "name":"python-build12"
        },
       "spec":{
                "output":{
                        "pushSecret":{
                                "name":"private-reg"
                        },
                        "to":{
                                "kind":"DockerImage",
                                "name":"dockerregistry-jjj.apps.ir-thr-at1.arvan.run/nodepaas"
                        }
                },
                "resources":{
                        "limits":{
                                "cpu":"1500m",
                                "ephemeral-storage":"1G",
                                "memory":"2G"
                        },
                        "requests":{
                                "cpu":"1500m",
                                "ephemeral-storage":"1G",
                                "memory":"1G"
                        }
                },
                "runPolicy":"Serial",
                "source":{
                        "git":{
                                "uri":"https://gitlab.com/hemmati.ali.a/nodepaas.git"
                        },
                        "sourceSecret":{
                                "name":"db-secret"
                        }
                },
                "strategy":{
                        "dockerStrategy":{
                                "forcePull":true
                        }
                },
                "triggers":[
                        {
                                "gitlab":{
                                        "secretReference":{
                                                "name":"webhooksecre"
                                        }
                                },
                                "type":"GitLab"
                        }       
                ]
        }
}