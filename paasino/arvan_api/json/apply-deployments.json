{
    "apiVersion":"apps/v1",
    "kind":"Deployment",
    "metadata":{
        "labels":{
            "app":"myfirstapp",
            "customer":"customer1"
        },
        "name":"nginx-deployment23"
    },
    "spec":{
        "replicas":1,
        "selector":{
            "matchLabels":{
                "app":"nginx"
            }
        },
        "template":{
            "metadata":{
                "labels":{
                    "app":"nginx"
                }
            },
            "spec":{
                "containers":
                [
                    {
                        "image":"nginx",
                        "imagePullPolicy":"IfNotPresent",
                        "name":"nginx-container",
                        "ports":
                        [
                            {
                                "containerPort":2368,
                                "protocol":"TCP"
                            }
                        ],
                        "resources":{
                            "limits":{
                                "cpu":"1",
                                "ephemeral-storage":"2G",
                                "memory":"1G"
                            },
                            "requests":{
                                "cpu":"1",
                                "ephemeral-storage":"2G",
                                "memory":"1G"
                            }
                        }
                    }
                ],
                "imagePullSecrets":
                [
                    {
                        "name":"private-reg"
                    }
                ]
            }
        }
    }
}